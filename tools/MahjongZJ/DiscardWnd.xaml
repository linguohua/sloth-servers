            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="出牌并飞听牌" Click="OnDiscardFlyRichi_Button_Clicked" x:Name="BtnExtraXX"></Button>
            <Button Content="出牌并听牌" Click="OnDiscardRichi_Button_Clicked" x:Name="BtnExtra"></Button>
            <Button Content="出牌" Click="OnDiscard_Button_Clicked"></Button>
            <Button Content="取消" Margin="10,0,0,0" Click="OnCancel_Button_Clicked"></Button>
