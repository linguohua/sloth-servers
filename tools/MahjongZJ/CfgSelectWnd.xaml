<Window x:Class="MahjongTest.CfgSelectWnd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MahjongTest"
        mc:Ignorable="d"
        Title="CfgSelectWnd" Height="300" Width="300" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
        </Grid.RowDefinitions>
        <ListBox Grid.Row="0" Grid.RowSpan="3" x:Name="LbCfgs">
        </ListBox>
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="选择" Click="OnSelect_Button_Clicked"></Button>
            <Button Content="取消" Margin="10,0,0,0" Click="OnCancel_Button_Clicked"></Button>
        </StackPanel>
    </Grid>
</Window>
